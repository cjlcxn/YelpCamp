<%- layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit campground:</h1> 
  <div class="row col-6 offset-3">
     <form class="needs-validation" novalidate enctype="multipart/form-data" action="/campgrounds/<%= camp.id %>?_method=PUT" method="POST">
       <div class="mb-3">
         <label class="form-label" for="title">Title: </label>
         <input class="form-control" type="text" name="title" id="title" value="<%= camp.title %>" required/>
       </div>
       <div class="mb-3">
         <label class="form-label" for="location">Location: </label>
         <input class="form-control" type="text" name="location" id="location" value="<%= camp.location %>" required/>
       </div>
       <div class="input-group mb-3">
         <span class="input-group-text">$</span>
         <input class="form-control" type="text" name="price" id="price" value="<%= camp.price %>" required/>
       </div>
       <div class="form-group mb-3"">
         <label for="description">Description: </label>
         <textarea
           class="form-control"
           id="description"
           name="description"
           rows="3"
           required
         ><%= camp.description %></textarea>
       </div>
       <div class="mb-3">
        <label class="form-label" for="formFileMultiple">Add Image/s: </label>
        <input class="form-control" type="file" name="image" id="formFileMultiple" multiple/>
      </div>
      <div class="row mb-3">
        <!-- renders each image that is in specific campground db -->
        <% camp.images.forEach((img, i) => { %>
          <div class="col-4">
            <div class="form-check">
            <input class="form-check-input" type="checkbox" id="image-<%= i %>" value="<%= img.filename %>" name="deletedImgs[]">
            <label class="form-check-label" for="image-<%= i %>">
              Delete?
            </label>
          </div>
          <img class="img-thumbnail" src="<%= img.thumbnail %>" alt="">
          </div>
          <% }) %> 
      </div>
 
       <button class="btn btn-primary mb-3">Submit</button>
     </form>
     <a href="/campgrounds/<%= camp.id %>">Return</a>
   </div>
 </div>